<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <GridLayout
        android:id="@+id/grid_view"
        android:layout_width="389dp"
        android:layout_height="279dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:useDefaultMargins="true">

        <Button
            android:id="@+id/woonkamer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="#26c281"
            android:stateListAnimator="@null"
            android:text="Woonkamer"
            android:textColor="#fff" />

        <Button
            android:id="@+id/slaapkamer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="#26c281"
            android:stateListAnimator="@null"
            android:text="Slaapkamer"
            android:textColor="#fff" />

        <Button
            android:id="@+id/keuken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="#26c281"
            android:stateListAnimator="@null"
            android:text="Keuken"
            android:textColor="#fff" />

        <Button
            android:id="@+id/badkamer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="#26c281"
            android:stateListAnimator="@null"
            android:text="Badkamer"
            android:textColor="#fff" />

        <Button
            android:id="@+id/kinderkamer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="#26c281"
            android:stateListAnimator="@null"
            android:text="Kinderkamer"
            android:textColor="#fff" />

        <Button
            android:id="@+id/zolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="#26c281"
            android:stateListAnimator="@null"
            android:text="Zolder"
            android:textColor="#fff" />

    </GridLayout>

</RelativeLayout>